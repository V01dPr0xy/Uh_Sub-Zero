doctype html
html
  head
    title Edit
  body
    h3 Name Entry
    form(id='form', method='post', action='/')
      label Username:
      br
      input(type='text', name='username')
      br
      label Password:
      br
      input(type='text', name='password')
      br
      label Avatar:
      br
      ul(style='list-style-type:none')
        li
          button(type='button', value='eyes', id='EYESADD') +
        li
          button(type='button', value='nose', id='NOSEADD') +
        li
          button(type='button', value='mouth', id='MOUTHADD') +
        li
          button(type='button', value='color', id='color') +
      br
      img(id='avatar', src="https://api.adorable.io/avatars/face/eyesEYEVAL/noseNOSEVAL/mouthMOUTHVAL/f00", height="100" width="100")
      br
      ul(style='list-style-type:none')
        li
          button(type='button', value='eyes', id='EYESSUB') -
        li
          button(type='button', value='nose', id='NOSESUB') -
        li
          button(type='button', value='mouth', id='MOUTHSUB') -
        li
          button(type='button', value='color', id='color') -
      br
      label User-Level:
      br
      input(type='text', name='user_level')
      br
      label Email:
      br
      input(type='text', name='email')
      br
      label Age:
      br
      input(type='text', name='age')
      br
      input(type='submit', value='submit')