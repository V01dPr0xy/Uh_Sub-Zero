doctype html
html
  head
    title #{title}
    Link(href='style.css' rel='stylesheet')
  body
    div(class='navbar-menu')
      nav
        a(id='home', class="button", href="/") Home
        if user
          a(id='admin', class="button", href="/admin") Admin
          a(id='logout', class="button", href="/logout") Logout
          a(id='edit', class="button", href="/edit") #{user.username}
        else
          a(id='login', class="button", href="/login") Login
          a(id='register', class="button", href="/register") Register
    header
     h1(style="text-align: center;") #{title} 
    block content
footer